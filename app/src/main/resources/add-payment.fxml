<?import javafx.scene.layout.VBox?>

<VBox prefHeight="645.0" prefWidth="1120.0" spacing="10.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.btmxh.apartmentapp.AddPaymentController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="section-title" text="Thu phí" textAlignment="CENTER" />
      <GridPane hgap="20.0" vgap="30.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="535.0" minWidth="10.0" prefWidth="334.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="820.0" minWidth="10.0" prefWidth="666.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="30.0" prefWidth="282.0" styleClass="big-label" text="Khoản thu" GridPane.rowIndex="1" />
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="feeLabel" maxWidth="1.7976931348623157E308" text="Chưa chọn khoản thu" HBox.hgrow="ALWAYS" />
                  <Button fx:id="selectFeeButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="66.0" text="Chọn" />
               </children>
            </HBox>
            <Label prefHeight="30.0" prefWidth="282.0" styleClass="big-label" text="Số tiền" GridPane.rowIndex="2" />
            <TextField fx:id="valueTextField" disable="true" styleClass="big-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding></TextField>
            <Label prefHeight="30.0" prefWidth="290.0" styleClass="big-label" text="Căn hộ" />
            <Button fx:id="cancelButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Huỷ" GridPane.columnIndex="1" GridPane.rowIndex="5" />
          <Button fx:id="submitButton" contentDisplay="CENTER" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Xác nhận" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="roomLabel" maxWidth="1.7976931348623157E308" text="Chưa chọn căn hộ" HBox.hgrow="ALWAYS" />
                  <Button fx:id="selectRoomButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="66.0" text="Chọn" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="80.0" left="80.0" right="80.0" top="80.0" />
         </VBox.margin>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
