<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" spacing="10.0" styleClass="var-box" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.btmxh.apartmentapp.AddServiceFeeVarController">
   <children>
      <BorderPane>
         <left>
            <Label text="Name" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#removeSelf" text="Remove" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
      <TextField fx:id="nameField" />
      <Label layoutX="10.0" layoutY="10.0" text="Value" />
      <TextField fx:id="valueField" layoutX="10.0" layoutY="28.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
