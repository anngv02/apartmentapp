<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.btmxh.apartmentapp.LoginController">
   <padding>
      <Insets bottom="50" left="50" right="50" top="50" />
   </padding>

   <Label style="-fx-text-fill: #000000;" text="Đăng nhập">
      <font>
         <Font name="System Bold" size="36.0" />
      </font>
   </Label>

   <VBox alignment="CENTER_LEFT" maxWidth="350.0" prefWidth="300.0" spacing="5">
      <Label text="Email" />
      <TextField fx:id="usernameTextField" prefWidth="300" />
   </VBox>

   <VBox alignment="CENTER_LEFT" maxWidth="350.0" prefWidth="300.0" spacing="5">
      <Label text="Mật khẩu" />
      <PasswordField fx:id="passwordPasswordField" maxWidth="350.0" prefWidth="300" />
   </VBox>
   <Label fx:id="loginMessageLabel" alignment="CENTER" />

   <Button fx:id="loginButton" defaultButton="true" onAction="#loginButtonOnActive" prefWidth="200" style="-fx-background-color: #DBBCC3; -fx-text-fill: #303D4F; -fx-border-radius: 15; -fx-background-radius: 15;" text="Đăng nhập">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>

   <Hyperlink fx:id="clicktoRegister" style="-fx-text-fill: #303D4F;" text="Nếu bạn chưa có tài khoản, click vào đây" underline="true" />
</VBox>
