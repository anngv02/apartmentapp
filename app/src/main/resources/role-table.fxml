<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<TableView fx:id="table" editable="true" prefHeight="400.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.btmxh.apartmentapp.RoleTableController">
   <columns>
      <TableColumn fx:id="numCol" editable="false" prefWidth="100.0" sortable="false" text="STT" />
      <TableColumn fx:id="usernameCol" editable="false" prefWidth="300.0" sortable="false" text="Tên tài khoản" />
      <TableColumn fx:id="fullnameCol" editable="false" prefWidth="300.0" sortable="false" text="Họ và tên" />
      <TableColumn fx:id="phoneNumCol" editable="false" prefWidth="200.0" sortable="false" text="SĐT" />
      <TableColumn fx:id="roleCol" onEditCommit="#onRoleEdit" prefWidth="200.0" sortable="false" text="Vai trò" />
   </columns>
   <placeholder>
      <Label text="Không có thông tin" />
   </placeholder>
   <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
   </columnResizePolicy>
</TableView>
